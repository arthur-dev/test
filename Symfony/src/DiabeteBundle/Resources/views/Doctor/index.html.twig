{% extends "DiabeteBundle:layout:doctor_layout.html.twig" %}


{% block page_title %}
<strong>{{ doctor.getFirstname()}}  {{ doctor.getLastname()}}</strong>
{% endblock %}
{% block content %}


    <!-- ROW du haut  -->
    <div class="row">

        <!-- Vos info  -->
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading"> 
                <div class="panel-control">
                                    <a href="{{ path('editDoctor') }}"<button class="dropdown-toggle btn btn-info">
                                            <i class="fa fa-gear fa-lg"></i>
                                        </button></a>
                                </div>
                <h3 class="panel-title" >Vos Informations</h3>

                </div>
                <div class="panel-body">
                            <ul class="list-unstyled">
                                <li>
                                    <strong>Né(e) le </strong>{{ doctor.getBirthday()|date('d/m/Y') }} ({{ doctor.getAge() }} ans)
                                </li>
                                <li>
                                    <strong>Adresse : </strong>{{doctor.getAddress()}}
                                </li>
                                <li>
                                    <strong>Code Postal : </strong>{{doctor.getPostalCode()}}
                                </li>
                                <li>
                                    <strong>Ville : </strong>{{doctor.getCity()}}
                                </li>
                                <li>
                                    <strong>Téléphone : </strong>{{doctor.getPhone()}}
                                </li>
                                <li>
                                    <strong>Téléphone : </strong>{{doctor.getCellPhone()}}
                                </li>
                            </ul>
                </div>
            </div>
        </div>

    </div>



<link rel="stylesheet" type="text/css" href="{{ asset('bundles/Diabete/css/dataTables.bootstrap.css') }}">
<div class="row">

        <!-- Vos info  -->
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                <h3 class="panel-title" >Vos patients</h3>

                </div>

            <div class="table-responsive">  
                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="subscribers-list">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Nom du médecin</th>
                            <th>Téléphone</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="5" class="dataTables_empty">Chargement en cours...</td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Nom du médecin</th>
                            <th>Téléphone</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            </div>
        </div>

    </div>



    <script src="{{ asset('bundles/Diabete/js/lib/dataTables/jquery.dataTables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/Diabete/js/lib/dataTables/dataTables.bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/Diabete/js/lib/dataTables/oLanguage.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/Diabete/js/Files/dataTablesFilesList.js') }}" type="text/javascript"></script>


{% endblock %}