{# On étend notre layout #}
{% extends "DiabeteBundle:layout:login_layout.html.twig" %}

{% block page_title %}Se connecter{% endblock %}

{# Dans notre layout, il faut définir le block body #}
{% block content %}
			
				<div class="col-sm-6">
					<div class="panel">
						<div class="panel-heading">
							<h3 class="panel-title">Authentification</h3>
						</div>


						<!--HORIZONTAL FORM-->
						<!--===================================================-->

						<form action="{{ path('fos_user_security_check') }}" method="post" class="form-horizontal" role="form">
							<div class="panel-body">
								<div class="form-group">
									<label class="col-sm-3 control-label" for="demo-hor-inputemail">Nom d'utilisateur</label>
									<div class="col-sm-9">
										<input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="Utilisateur" autofocus />
									</div>
								</div>


								<div class="form-group">
									<label class="col-sm-3 control-label" for="demo-hor-inputpass">Mot de passe</label>
									<div class="col-sm-9">
										<input type="password" id="password" class="form-control" name="_password" placeholder="Mot de passe" />
									</div>
								</div>


								<div class="form-group">
									<div class="col-sm-offset-3 col-sm-9">
										<label class="form-checkbox form-normal">
											<input type="checkbox"> Remember me
										</label>
									</div>
								</div>
							</div>
							{#
	                		If you want to control the URL the user is redirected to on success (more details below)
	                		<input type="hidden" name="_target_path" value="/account" />
	            			#}
							<div class="panel-footer text-right">
								<button type="submit" name="submit" class="btn btn-info">S'authentifier</button>
							</div>
						</form>

						<!--===================================================-->
						<!-- END OF HORIZONTAL FORM  -->

					</div>
				</div>
{% endblock %}